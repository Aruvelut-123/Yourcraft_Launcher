<fw:AcrylicWindow x:Class="DeCraftLauncher.WindowDeployMTP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:local="clr-namespace:DeCraftLauncher"
        mc:Ignorable="d"
        NoiseOpacity="0.0001"
        TintColor="#000000"
        TintOpacity="0.6"
        Title="DECRAFT: Deploy to mobile device" Height="334" Width="732" Background="#FA000000" AcrylicWindowStyle="Normal">
    <Grid>
        <ListBox x:Name="listbox_devices" Background="Transparent" Foreground="White" Margin="10,86,0,10" SelectionChanged="listbox_devices_SelectionChanged" BorderBrush="#FF3C3C3C" HorizontalAlignment="Left" Width="169"/>
        <Label x:Name="label_header" Content="Deploy {x} to mobile device" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <ListBox x:Name="listbox_datapaths" Background="Transparent" Foreground="White" Margin="242,86,10,10" BorderBrush="#FF3C3C3C"/>

    </Grid>
</fw:AcrylicWindow>
